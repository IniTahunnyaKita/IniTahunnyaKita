<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alibabi="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">
        <com.kitekite.initahunnyakita.widget.RoundedImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/profile_pic_size"
            android:layout_height="@dimen/profile_pic_size"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Ensa Shop"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.kitekite.initahunnyakita.widget.CustomTextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Dompet Gaul"
        alibabi:ttf_name="roboto/Roboto-Medium.ttf"/>

    <com.kitekite.initahunnyakita.widget.CustomTextView
        android:id="@+id/post_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        alibabi:ttf_name="roboto/Roboto-Light.ttf"/>

    <com.kitekite.initahunnyakita.widget.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
    <ImageView
        android:id="@+id/post_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/hangoutpost_btn_container_bg">
        <TableRow
            android:layout_weight="1"
            android:stretchColumns="*">

            <RelativeLayout
                android:id="@+id/thumbs_up_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:background="@drawable/hangoutpost_btn_bg">
                <ImageView
                    android:id="@+id/thumbs_up_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_thumbs_up_default"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/thumbs_up_img">
                    <TextView
                        android:id="@+id/post_thumbs_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="thumbs up"
                        android:textSize="12sp"/>

                </LinearLayout>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/hangoutpost_btn_bg">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_discuss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Discuss"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/post_poll_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/hangoutpost_btn_bg">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_poll"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Poll"/>
        </LinearLayout>
        </TableRow>
    </TableLayout>
        <TextView
            android:id="@+id/post_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:background="@color/Gray"/>
    </com.kitekite.initahunnyakita.widget.RoundLinearLayout>


</LinearLayout>