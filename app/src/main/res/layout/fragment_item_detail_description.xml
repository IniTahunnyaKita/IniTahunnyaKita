<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kitekite.initahunnyakita.widget.RoundedImageView
            android:id="@+id/description_shop_pic"
            android:layout_width="@dimen/profile_pic_size"
            android:layout_height="@dimen/profile_pic_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/jersenesia"/>

        <TextView
            android:id="@+id/description_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/description_shop_pic"
            android:layout_marginRight="10dp"
            android:text="Jernesia Sport"/>

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this product"
        android:textSize="20sp"/>



</LinearLayout>