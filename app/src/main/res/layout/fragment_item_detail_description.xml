<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:background="@color/White">

    <LinearLayout
        android:id="@+id/shop_id_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_small_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/Gray" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/description_shop_pic"
            android:layout_width="@dimen/profile_pic_size_large"
            android:layout_height="@dimen/profile_pic_size_large"
            android:layout_centerHorizontal="true"
            android:src="@color/LightGrey"/>

        <TextView
            android:id="@+id/description_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="16sp"
            android:textColor="@color/White"
            android:typeface="sans"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/lorem"
        android:typeface="sans"
        android:textSize="18sp"/>



</LinearLayout>