<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <RelativeLayout
        android:id="@+id/holder_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="-121dp"
        android:orientation="horizontal"
        android:background="@drawable/dialog_grey_transparent_bg">

        <EditText
            android:id="@+id/poll_EditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="top"
            android:textSize="16sp"
            android:maxLines="2"
            android:background="@drawable/rounded_grey_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/poll_EditText"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/poll_holder"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:orientation="horizontal"/>
            <ImageView
                android:id="@+id/poll_cancel_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_action_cancel"/>
            <Button
                android:id="@+id/poll_btn"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="POLL"
                android:textSize="14sp"
                android:textColor="@color/White"
                android:typeface="sans"
                android:backgroundTint="@color/Teal"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>