<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:background="@color/White">

    <ImageView
        android:id="@+id/list_bg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"/>

    <com.kitekite.initahunnyakita.widget.RoundedImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/prof_pic"/>
    <TextView
        android:id="@+id/user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_bg"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_fullname"
        android:layout_centerHorizontal="true"
        android:text="@string/user_location"
        android:textSize="10sp"/>
    <com.kitekite.initahunnyakita.widget.ProfileItem
        android:id="@+id/profile_item_friends"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/user_location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        item:item_title="friends"/>
    <com.kitekite.initahunnyakita.widget.ProfileItem
        android:id="@+id/profile_item_shares"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/user_location"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        item:item_title="shares"/>
    <com.kitekite.initahunnyakita.widget.ProfileItem
        android:id="@+id/profile_item_following"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/user_location"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        item:item_title="following"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/Silver"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>