<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_small_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_small_margin"
        android:background="?attr/selectableItemBackground">

        <com.molaja.android.widget.RoundedImageView
            android:id="@+id/collection_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/LightGrey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/collection_image"
            android:layout_marginTop="@dimen/default_small_margin"
            android:layout_marginLeft="@dimen/default_small_margin"
            android:orientation="vertical">

            <com.molaja.android.widget.CustomTextView
                android:id="@+id/collection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/Black"
                android:textSize="18sp"
                app:ttf_name="roboto/Roboto-Light"/>

            <TextView
                android:id="@+id/collection_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 1.000.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/collection_image">

            <Button
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textAllCaps="true"
                android:background="?attr/selectableItemBackground"/>

            <Button
                android:id="@+id/add_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>