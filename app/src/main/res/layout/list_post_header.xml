<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alibabi="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingTop="@dimen/post_vertical_margin"
    android:paddingLeft="5dp" android:paddingRight="5dp"
    android:background="#DDEEEEEE">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">
        <com.kitekite.initahunnyakita.widget.RoundedImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/profile_pic_size"
            android:layout_height="@dimen/profile_pic_size"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Ensa Shop"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.kitekite.initahunnyakita.widget.CustomTextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Dompet Gaul"
        alibabi:ttf_name="roboto/Roboto-Medium.ttf"/>

</LinearLayout>