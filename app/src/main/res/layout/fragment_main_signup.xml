<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/join_molaja_text"
        android:textSize="28sp"
        android:textColor="@color/DarkTeal"
        android:typeface="sans"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/email_signup_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:text="@string/sign_up_using_email"
            android:textColor="@color/White"
            android:typeface="sans"
            android:clickable="true"
            android:background="@drawable/btn_bg_teal"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_email_white"/>

    </RelativeLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitEnd"
        android:src="@drawable/down_arrow"/>

</LinearLayout>