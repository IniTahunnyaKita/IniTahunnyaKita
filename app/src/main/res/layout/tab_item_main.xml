<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingTop="10dp" android:paddingBottom="5dp">
    
    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.kitekite.initahunnyakita.widget.CustomTextView
        xmlns:alibabi="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/tab_image"
        android:layout_centerHorizontal="true"
        android:text="Hang Out"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        alibabi:ttf_name="roboto/Roboto-Light.ttf"/>

</RelativeLayout>